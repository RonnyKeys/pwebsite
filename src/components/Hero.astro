---
import Button from "./Button.astro";

---

<section class="hero">
    <div class="hero-container container">
        <div class="hero-txt">
            <h2>One-on-One Piano Lessons</h2>
            <p>Local lessons in Kempner, TX. From beginner to advanced all ages are welcome!</p>
            <Button classes="btn2">Book a trial class</Button>
        </div>
        <div class="hero-img">
            <img src="./images/piano.jpg">
        </div>
    </div>
    
</section>


<style>

    .hero-container {
        padding: 50px 0;
        gap: 30px 0;
        
    }
    .hero-txt {
        display: flex;
        flex-direction: column;
        justify-content: center;
        
        
    }
   
    h2 {
        font-size: clamp(2.5rem, 1.8478rem + 3.4783vw, 5rem);
        margin-bottom 1rem;
        color: var(--primary);
    }

    p {
        font-size: clamp(0.8125rem, 0.7636rem + 0.2609vw, 1rem);
        font-weight: 500;
        max-width: 70%;
    }

    .hero-img img {
        object-fit: cover;
        width: 100%;
        border-radius: 40% 60% 60% 40% / 70% 30% 70% 30%;
        
    }

    @media only screen and (max-width: 950px){
        .hero-container {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        }
        .hero-txt {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

    }

    }
   
    




    
</style>