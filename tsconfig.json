{
  "compilerOptions": {
    "strict": false, // Turns off strict mode
    "noImplicitAny": false, // Allows variables to be `any` without explicit annotation
    "strictNullChecks": false, // Disables strict null checks
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@comp/*": ["src/components/*"],
      "@ui/*": ["src/components/ui/*"]
    }
  }
}
